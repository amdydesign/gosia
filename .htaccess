RewriteEngine On
RewriteBase /

# API - pass through
RewriteRule ^api/(.*)$ api/$1 [L]

# Static files - serve directly if they exist
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# All other requests go to React index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ index.html [L]
